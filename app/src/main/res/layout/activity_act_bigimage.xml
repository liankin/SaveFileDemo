<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#383737">
    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
        android:id="@+id/subsampling_scale_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_back"
            android:layout_marginTop="30dp"
            android:paddingLeft="15dp"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:text="返回"
            android:textColor="#4564de"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_current_index"
            android:layout_marginTop="30dp"
            android:paddingLeft="15dp"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:text="图片:"
            android:textColor="#4564de"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:id="@+id/btn_previous_page"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:elevation="10dp"
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="@dimen/title_bar_height"
        android:layout_margin="10dp"
        android:background="@drawable/graffiti_move"
        android:src="@drawable/ic_lost_page"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/btn_next_page"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:elevation="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="@dimen/title_bar_height"
        android:layout_margin="10dp"
        android:background="@drawable/graffiti_move"
        android:src="@drawable/ic_next_page"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textStyle="bold"/>
</RelativeLayout>
